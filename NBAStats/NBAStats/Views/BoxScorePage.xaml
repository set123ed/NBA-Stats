<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NBAStats.Views.BoxScorePage" 
             x:Name="boxScorePage"
             Title="Boxscore">
    <ContentPage.Content>

        <Grid>

            <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" VerticalOptions="Center" HorizontalOptions="Center"/>

            <Grid RowDefinitions="1.5*,*,2.5*" ColumnDefinitions="*" IsVisible="{Binding IsNotBusy}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <StackLayout Orientation="Vertical"  VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" BackgroundColor="Gainsboro" Grid.Column="0" Grid.Row="0">

                    <StackLayout Orientation="Horizontal"  VerticalOptions="Center" HorizontalOptions="Center">

                        <StackLayout Orientation="Vertical" VerticalOptions="Center" HorizontalOptions="Center">

                            <Label Text="{Binding VTeamName}" FontSize="20" TextColor="Black"/>

                        </StackLayout>

                        <Label Text="VS" VerticalOptions="Center" HorizontalOptions="Center" FontSize="20" TextColor="Black"/>

                        <StackLayout Orientation="Vertical" VerticalOptions="Center" HorizontalOptions="Center">

                            <Label Text="{Binding HTeamName}" FontSize="20" TextColor="Black"/>

                        </StackLayout>

                    </StackLayout>

                    <Label Text="{Binding ScoreOrTime}" HorizontalOptions="Center" VerticalOptions="End" Margin="10" FontSize="20" TextColor="Black"/>
                    <Label Text="{Binding TimePeriodHalftime}" HorizontalOptions="Center" VerticalOptions="End" Margin="10" FontSize="20" TextColor="Black"/>
                </StackLayout>


                <StackLayout Orientation="Horizontal" Margin="15" Grid.Column="0" Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center">

                    <Button Text="{Binding VTeamName}" TextColor="White" BackgroundColor="{Binding VTeamColor}" Command="{Binding VTeamSelectedCommand}" HorizontalOptions="Center" VerticalOptions="Center"/>
                    <Button Text="{Binding HTeamName}" TextColor="White" BackgroundColor="{Binding HTeamColor}" Command="{Binding HTeamSelectedCommand}" HorizontalOptions="Center" VerticalOptions="Center"/>

                </StackLayout>

                <ScrollView Orientation="Horizontal" IsVisible="{Binding ShowHTeam}" Grid.Column="0" Grid.Row="2"  >
                    <StackLayout Orientation="Horizontal" >


                        <ListView HasUnevenRows="True" ItemsSource="{Binding HTeamPlayerStats}" RowHeight="5" WidthRequest="1500">
