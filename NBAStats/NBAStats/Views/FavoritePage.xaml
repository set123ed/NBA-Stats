<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NBAStats.Views.FavoritePage">
    
    <Grid ColumnDefinitions="auto" RowDefinitions="auto,auto,auto,auto,auto" BackgroundColor="White">
        
        <Entry Text="{Binding Code}" Placeholder="code" Grid.Column="0" Grid.Row="0"/>
        <Entry Text="{Binding Name}" Placeholder="Name" Grid.Column="0" Grid.Row="1"/>
        <Button Text="Save" Command="{Binding SaveData}" Grid.Column="0" Grid.Row="2"/>
        <Button Text="Delete" Command="{Binding DeleteData}" Grid.Column="0" Grid.Row="3" />

        <ListView ItemsSource="{Binding ListPlayer}" Grid.Column="0" Grid.Row="4">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid ColumnDefinitions="*,*" RowDefinitions="*">
                            <Label Text="{Binding IdFavoritePlayer}" Grid.Column="0" Grid.Row="0"/>
                            <Label Text="{Binding Name}" Grid.Column="1" Grid.Row="0"/>
                        </Grid>
                        
                        
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
    
</ContentPage>