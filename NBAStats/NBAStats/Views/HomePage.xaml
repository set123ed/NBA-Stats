                        </contrils:CarouselViewControl.ItemsSource>
                    </contrils:CarouselViewControl>-->


                        <contrils:CarouselViewControl Grid.Row="1" ItemsSource="{Binding GamesOfDay}" Grid.ColumnSpan="2" Orientation="Horizontal"
                                                      InterPageSpacing="10" Position="{Binding ImagePosition}" >
                            <contrils:CarouselViewControl.ItemTemplate>
                                <DataTemplate>

                                    <Grid Scale="1" Padding="20">

                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={x:Reference HomeP}, Path=BindingContext.GameSelectedCommand}" CommandParameter="{Binding}"/>
                                    </Grid.GestureRecognizers>
                                        
                                    <Frame Style="{StaticResource Key=FrameStyle1}"  Scale="1" >
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={x:Reference HomeP}, Path=BindingContext.GameSelectedCommand}" CommandParameter="{Binding}"/>
                                        </Frame.GestureRecognizers>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition Height="auto"/>

                                            </Grid.RowDefinitions>
                                                
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="160"/>
                                                    <ColumnDefinition Width="160"/>
                                                </Grid.ColumnDefinitions>

                                            <Label Text="{Binding VTeam.TriCode}" Style="{StaticResource Key=LabelStyle}" Grid.Row="0" HorizontalOptions="Start" VerticalTextAlignment="Start"  Padding="50,0,0,0" Grid.Column="0"/>

                                            <Label Text="VS" Style="{StaticResource Key=LabelStyle}" FontSize="15" VerticalOptions="Center" Grid.Row="0"  HorizontalOptions="Center" Grid.ColumnSpan="2"/>

                                            <Label Text="{Binding HTeam.TriCode}" Style="{StaticResource Key=LabelStyle}"  Padding="0,0,50,0" Grid.Column="1" HorizontalOptions="End"/>

                                            <Label Text="{Binding ScoreOrTime}" HorizontalOptions="Center" VerticalTextAlignment="Start" Padding="0,10,0,0"
                                                            FontSize="20" TextColor="#fbfef9" FontAttributes="Bold" Grid.Row="2" Grid.ColumnSpan="2" />
                                            
                                                <Label Text="See Details" Style="{StaticResource Key=LabelStyle}" FontSize="19"  VerticalOptions="Center" Grid.Row="4"  Padding="0,38,0,0" HorizontalOptions="Center" Grid.ColumnSpan="2"/>


                                        </Grid>
                                         </Frame>
                                        </Grid>
                                </DataTemplate>
                            </contrils:CarouselViewControl.ItemTemplate>
                        </contrils:CarouselViewControl>
                    <!--<CollectionView BackgroundColor="#fbfef9" ItemsSource="{Binding GamesOfDay}"
                                    ItemsLayout="HorizontalList" Grid.Row="2" Grid.ColumnSpan="2">
