                            <x:Array Type="{x:Type View}">
                                <Image Source="foto1.jpg"/>
                                <Image Source="foto2.jpg"/>
                                <Image Source="foto3.jpg"/>
                                <Image Source="foto4.jpg"/>
                                <Image Source="foto5.jpg"/>
