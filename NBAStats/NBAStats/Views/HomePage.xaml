                    <Label VerticalTextAlignment="End" Text="Scoring Leaders" FontSize="25" HorizontalOptions="CenterAndExpand" TextColor="Black" Grid.Row="2" Grid.ColumnSpan="2"/>

                    <CollectionView BackgroundColor="#fbfef9" Grid.Row="3" ItemsSource="{Binding ScoringLeaders}"  ItemsLayout="HorizontalList"  Grid.ColumnSpan="2">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                 <Grid Scale="0.9" Padding="10"  >
                            <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid.GestureRecognizers>
                                 <TapGestureRecognizer Command="{Binding Source={x:Reference HomeP}, Path=BindingContext.PlayerSelectedCommand}" CommandParameter="{Binding}"/>
                            </Grid.GestureRecognizers>

                                    <Frame HasShadow="True"  Style="{StaticResource Key=FrameStyle1}"  Margin="5" >
                                         <Grid>
                                             <Grid.RowDefinitions>
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition Height="auto"/>
                                             </Grid.RowDefinitions>
                                             
                                             <Grid.ColumnDefinitions>
                                                 <ColumnDefinition Width="160"/>
                                                <ColumnDefinition Width="150"/>
                                            </Grid.ColumnDefinitions>

                                            <Label Text="{Binding Name}" Style="{StaticResource Key=LabelStyle}" Grid.Row="0"  HorizontalOptions="CenterAndExpand" Grid.ColumnSpan="2"  VerticalOptions="Center" />
                                            <Label Text="{Binding Team}" Grid.Row="1" Grid.ColumnSpan="2" Style="{StaticResource Key=LabelStyle}" FontSize="20" VerticalOptions="Center" HorizontalOptions="Center"/>
                                            <Label Text="{Binding PointsPerGame}" Style="{StaticResource Key=LabelStyle}" Grid.Row="2" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center" FontSize="20" />
                                            <Label Text="PTS" VerticalOptions="Center" Style="{StaticResource Key=LabelStyle}"  HorizontalOptions="Center" FontSize="18" Grid.Row="2" />

                                            <Label Text="{Binding AssistsPerGame}"  Style="{StaticResource Key=LabelStyle}" Grid.Row="3" Grid.Column="1" VerticalOptions="Start" HorizontalOptions="Center" FontSize="20" />
                                            <Label Text="AST"  VerticalOptions="Center" Style="{StaticResource Key=LabelStyle}"  HorizontalOptions="Center" FontSize="18" Grid.Row="3"/>

                                            <Label Text="{Binding ReboundsPerGame}" Style="{StaticResource Key=LabelStyle}" Grid.Row="4" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center" FontSize="20" />
                                            <Label Text="RBS" VerticalOptions="Center" Style="{StaticResource Key=LabelStyle}" Grid.Row="4" HorizontalOptions="Center" FontSize="18"/>
                                         </Grid>

                                     </Frame>

                                     </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>

                    </CollectionView>
                    <Label VerticalTextAlignment="End" Text="Better Teams" FontSize="25" HorizontalOptions="Center" TextColor="Black" Grid.Row="5" Grid.ColumnSpan="2"/>

                    <CollectionView BackgroundColor="#fbfef9" Grid.Row="6" ItemsSource="{Binding  BetterTeams}"  ItemsLayout="HorizontalList"  Grid.ColumnSpan="2">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                 <Grid Scale="0.9" Padding="10"  >
                            <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={x:Reference HomeP}, Path=BindingContext.TeamSelectedCommand}" CommandParameter="{Binding TeamStanding.TeamId}"/>
                            </Grid.GestureRecognizers>

                                    <Frame  Style="{StaticResource Key=FrameStyle1}" Margin="5"  >
                                         <Grid>
                                             <Grid.RowDefinitions>
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition Height="auto"/>
                                             </Grid.RowDefinitions>
                                             <Grid.ColumnDefinitions>
                                                 <ColumnDefinition Width="160"/>
                                                 <ColumnDefinition Width="150"/>

                                             </Grid.ColumnDefinitions>

                                            <Label Text="{Binding TeamStanding.TeamSitesOnly.TeamNickname}" Style="{StaticResource Key=LabelStyle}"
                                                  Grid.ColumnSpan="2" Grid.Row="0"  VerticalOptions="Center" HorizontalOptions="Center"/>
                                            <Label Text="{Binding TeamStanding.TeamSitesOnly.TeamName}" Style="{StaticResource Key=LabelStyle}"
                                                  Grid.ColumnSpan="2" FontSize="20" Grid.Row="1"  VerticalOptions="Center" HorizontalOptions="Center"/>

                                            <Label Text="{Binding TeamStanding.Win}" Style="{StaticResource Key=LabelStyle}" Grid.Column="1" Grid.Row="2"
                                                   VerticalOptions="Center" HorizontalOptions="Center" FontSize="20" />
                                            <Label Text="WINS" VerticalOptions="Center" Grid.Column="0"
                                                   Style="{StaticResource Key=LabelStyle}" FontSize="18" Grid.Row="2" HorizontalOptions="Center" />

                                            <Label Text="{Binding TeamStanding.Loss}" Style="{StaticResource Key=LabelStyle}" Grid.Column="1" Grid.Row="3"  VerticalOptions="Center" HorizontalOptions="Center" FontSize="20" />
                                            <Label Text="LOSS" VerticalOptions="Center" Grid.Column="0" 
                                                    Style="{StaticResource Key=LabelStyle}" FontSize="18" Grid.Row="3" HorizontalOptions="Center"/>

                                            <Label Text="{Binding TeamStanding.WinPctV2}" Style="{StaticResource Key=LabelStyle}" Grid.Column="1" Grid.Row="4" VerticalOptions="Center" HorizontalOptions="Center" FontSize="20" />
                                            <Label Text="WIN%" VerticalOptions="Center" Grid.Column="0"
                                                    Style="{StaticResource Key=LabelStyle}" FontSize="18" Grid.Row="4" HorizontalOptions="Center"/>

                                            <Label Text="{Binding TeamStats.Ppg.Avg}" Style="{StaticResource Key=LabelStyle}" Grid.Column="1" Grid.Row="5" VerticalOptions="Center" HorizontalOptions="Center" FontSize="20" />
                                            <Label Text="PTS" VerticalOptions="Center" Grid.Column="0" 
                                                    Style="{StaticResource Key=LabelStyle}" FontSize="18" Grid.Row="5" HorizontalOptions="Center" />

                                            <Label Text="{Binding TeamStats.Apg.Avg}" Style="{StaticResource Key=LabelStyle}" Grid.Column="1" Grid.Row="6" VerticalOptions="Center" HorizontalOptions="Center" FontSize="20" />
                                            <Label Text="AST" VerticalOptions="Center"  Grid.Column="0"
                                                    Style="{StaticResource Key=LabelStyle}" FontSize="18" Grid.Row="6" HorizontalOptions="Center"/>

                                            <Label Text="{Binding TeamStats.Trpg.Avg}" Style="{StaticResource Key=LabelStyle}" Grid.Column="1" Grid.Row="7" VerticalOptions="Center" HorizontalOptions="Center" FontSize="20" />
                                            <Label Text="RBS" VerticalOptions="Center" Grid.Column="0"
                                                    Style="{StaticResource Key=LabelStyle}" FontSize="18" Grid.Row="7" HorizontalOptions="Center"/>

                                         </Grid>
                                     </Frame>
                                     </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    </Grid>
                </Grid>
            </ScrollView>
        </RefreshView> 
    </ContentPage.Content>
</ContentPage>